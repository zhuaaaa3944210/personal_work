	<script src="../js/rem.js"></script>
	<script src="../js/common_zcz.js"></script>
	<script src="../js/common_scan.js"></script>
	<script>
		var w = wWidth();
		var h = wHeight();
		var loginId = localStorage.getItem("loginId",loginId);
		var termId =localStorage.getItem("termId",termId);
		// $(".content").css("height", h);
		$(function() {
		
			$(".back_scan").click(function() {
				window.location.href = "./tea_course_class_job.html";
			})
$(".close").on("click", function() {
							$(".mask").css({
								"display": "none",
						
							})
							$(".top").css({
								"opacity": '1.0'
							})
						})
			
		
			//动态渲染数据
			var vm = new Vue({
				el: ".content",
				data: {
					objectArray: []
				},
				methods: {
					linkTo: function(dataId,cRomName) {
						var classId = dataId;
						var cRomName = cRomName;
						localStorage.setItem("classId",classId);
						localStorage.setItem("cRomName",cRomName);
						//bui.load Class 页面的跳转
							$(".top").css({
								"opacity": '0.6'
							})
							//出个弹窗
							$(".mask").css({
								"width": w,
								"height": h,
								"display": "block",
								"background": "#000",
								"zIndex": '900',
								"opacity": '0.85',
								"position": 'fixed',
							})
							$(".phone").css({
								"display": "block",
								"zIndex": '999',
							})
							//动态渲染弹出框
							createMaskHtml(this.objectArray,classId);
							
						
							window.location.href = "./tea_course_classRoom_stu.html"
					}
				}
			})
				//获取数据   班级列表信息
			$.ajax({
				type: "POST",
				url: ctxLocal+'classRoom/getClassRoomData.action',
				data: {
					uId:loginId,
					semesterId:termId,
					state:1
				},
				async: false,
				contentType: 'application/x-www-form-urlencoded;charset=utf-8',
				success: function(res) {
					if (res.code == 0) {
						//需要处理的参数处理下
						vm.$data.objectArray = res.data;
					}
				},
				error:function(e){
					console.log(e+'接口调取失败')
				}
			})
			
		})
		function createMaskHtml(objectArray,dataId){
			var html = '';
			if(objectArray.length>0){
				for(var i=0;i<objectArray.length;i++){
					if(objectArray[i].id ==dataId){
						$(".class-name").find("center").text(objectArray[i].cRomName);
						$(".class-number").find("center").text(objectArray[i].classNum);
						// $(".class-ma").find("img").attr("src",objectArray[i].ewmSrc);
						$(".class-number-01").find("center").text(objectArray[i].classBM);
					}
				}
			}
		}
	</script>
</html>

.chooseBtn {
    display: none;

}

.choose-label {
    box-shadow: #ccc 0px 0px 0px 1px;
    width: 0.86rem;
    height: 0.5rem;
    display: inline-block;
    border-radius: 0.8rem;
    position: relative;
    background-color: #bdbdbd;
    overflow: hidden;
}

.choose-label:before {
    content: '';
    position: absolute;
    left: 0;
    width: 0.5rem;
    height: 0.5rem;
    display: inline-block;
    border-radius: 0.8rem;
    background-color: #fff;
    z-index: 20;
    -webkit-transition: all 0.2s;
    transition: all 0.2s;
}

.chooseBtn:checked + label.choose-label:before {
    left: 0.34rem;
}

.chooseBtn:checked + label.choose-label {
    background-color: #5fd565;
}
